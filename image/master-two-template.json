{
"apiVersion": "v1",
"kind": "Pod",
"metadata": {"name":"k8s-master"},
"spec":{
  "hostNetwork": true,
  "containers":[
    {
      "name": "controller-manager",
      "image": "k8szju/hyper:1.0.5",
      "command": [
              "/hyperkube",
              "controller-manager",
              "--master=PRIVATEIP:8080",
              "--v=2"
        ]
    },
    {
      "name": "scheduler",
      "image": "k8szju/hyper:1.0.5",
      "command": [
              "/hyperkube",
              "scheduler",
              "--master=PRIVATEIP:8080",
              "--v=2"
        ]
    }
  ]
 }
}
